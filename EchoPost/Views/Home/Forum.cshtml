<div class="container mt-4">
    <h2>All Forums</h2>
    <div class="row">
        @foreach (var forum in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@forum.Name</h5>
                        <p class="card-text">@forum.Description</p>
                        <a href="/Forum/Details/@forum.Id" class="btn btn-primary btn-sm">View Forum</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

